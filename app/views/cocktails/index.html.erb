<h1 class="text-center">Cocktails</h1>
<div class="container">
 <div class="row">
   <% @cocktails.each do |cocktail| %>
   <div class="col-xs-12 col-sm-6 col-md-3">
     <%= render "card", cocktail: cocktail %>
     <%= link_to "Edit", edit_cocktail_path(cocktail), class: "btn btn-primary" %>
     <%= link_to "Delete", cocktail_path(cocktail), method: :delete, class: "btn btn-primary"%>
   </div>
   <% end %>
 </div>
 <%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-danger" %>
</div>
